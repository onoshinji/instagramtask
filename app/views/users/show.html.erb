<h2>ユーザー詳細画面</h2>
  <p id="notice"><%= notice %></p>
  <h2><%= @user.name %>のページ</h2
    <strong>Image:</strong>
    <%= image_tag @user.image.url %>
  <p>メールアドレス: <%= @user.email %></p>
  <%= @user.posts.each do |post| %>
    <tr>
      <td id="user_tr_color">タイトル:<%= post.title %></td>
      <br>
      <td>投稿内容:<%= post.content %></td>
      <br>
      <td><%= image_tag post.image.url %></td>
      <br>
      <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
      <td><%= link_to "投稿を編集する", edit_post_path(post.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to '投稿を削除する', post_path(post.id),data: { confirm: '本当に削除していいですか？' }, method: :delete %></td>
      <td><%= link_to '新しく投稿する', new_post_path %> <td>
      <td><%= link_to 'みんなの投稿', posts_path %> </td>
    </tr>
  <% end %>
